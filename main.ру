from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, ContextTypes

# –í–°–¢–ê–í–¨ –°–Æ–î–ê –°–í–û–ô –¢–û–ö–ï–ù
BOT_TOKEN = "7091791198:AAF7u5cBPcbW4PdZNFSJMSmXHp6qiivVEqk"

# –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text(
        "üëã –ü—Ä–∏–≤–µ—Ç! –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –±–æ—Ç–∞ *9 —à–∞–≥–æ–≤ –¥–ª—è –Ω–æ–≤—ã—Ö –º–∏–≥—Ä–∞–Ω—Ç–æ–≤ –≤ –°–®–ê*.\n\n"
        "üëâ /buy ‚Äî –ö—É–ø–∏—Ç—å –≥–∞–π–¥\n"
        "üëâ /help ‚Äî –ü–æ–ª—É—á–∏—Ç—å –ø–æ–º–æ—â—å",
        parse_mode="Markdown"
    )

# –ü–æ–∫—É–ø–∫–∞
async def buy(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text(
        "üõç –ù–∞–∂–º–∏—Ç–µ, —á—Ç–æ–±—ã –æ–ø–ª–∞—Ç–∏—Ç—å –∏ –ø–æ–ª—É—á–∏—Ç—å –≥–∞–π–¥:\n"
        "[üíµ –ö—É–ø–∏—Ç—å –∑–∞ $9.99](https://t.me/CryptoBot?start=store_A422556_guide)",
        parse_mode="Markdown"
    )

# –ü–æ–º–æ—â—å
async def help(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text(
        "üìò –ò–Ω—Å—Ç—Ä—É–∫—Ü–∏—è:\n"
        "1. –ù–∞–∂–º–∏—Ç–µ /buy\n"
        "2. –û–ø–ª–∞—Ç–∏—Ç–µ –≥–∞–π–¥\n"
        "3. –ü–æ–ª—É—á–∏—Ç–µ PDF –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏",
        parse_mode="Markdown"
    )

# –ó–∞–ø—É—Å–∫
def main():
    app = ApplicationBuilder().token(BOT_TOKEN).build()

    app.add_handler(CommandHandler("start", start))
    app.add_handler(CommandHandler("buy", buy))
    app.add_handler(CommandHandler("help", help))

    app.run_polling()

if __name__ == '__main__':
    main()
